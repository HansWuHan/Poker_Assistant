# ==============================================
# Poker Assistant 配置文件示例
# 复制此文件为 .env 并填写配置
# ==============================================

# ------------------
# Deepseek API 配置
# ------------------
DEEPSEEK_API_KEY=your_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ------------------
# 游戏配置
# ------------------
GAME_INITIAL_STACK=1000
GAME_SMALL_BLIND=5
GAME_BIG_BLIND=10
GAME_MAX_ROUND=100
GAME_PLAYER_COUNT=6

# AI 对手难度配置
# 可选值: easy（简单）, medium（中等）, hard（困难）, mixed（混合）
AI_OPPONENT_DIFFICULTY=mixed

# AI思考显示配置
# AI_SHOW_THINKING: 是否显示AI思考过程 (true/false)
AI_SHOW_THINKING=true

# GTO策略配置
# GTO_ENABLED: 是否启用GTO策略 (true/false)
# GTO_STRATEGY_MODE: 策略模式 (gto_only/exploitative_only/hybrid)
# GTO_WEIGHT: GTO策略权重 (0.0-1.0)
# GTO_SHOW_ANALYSIS: 是否显示GTO分析 (true/false)
# GTO_MIXED_STRATEGY: 是否使用混合策略 (true/false)
GTO_ENABLED=true
GTO_STRATEGY_MODE=hybrid
GTO_WEIGHT=0.6
GTO_SHOW_ANALYSIS=true
GTO_MIXED_STRATEGY=true

# ------------------
# AI 分析配置
# ------------------
AI_ANALYSIS_LEVEL=medium
AI_AUTO_SHOW_ADVICE=true
AI_ENABLE_OPPONENT_ANALYSIS=true
AI_ENABLE_BOARD_ANALYSIS=true
AI_ENABLE_REVIEW=true
AI_ENABLE_CHAT=true

# ------------------
# LLM 配置
# ------------------
LLM_MODEL=deepseek-chat
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=3000
LLM_TIMEOUT=30

# ------------------
# 调试配置
# ------------------
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/poker_assistant.log
